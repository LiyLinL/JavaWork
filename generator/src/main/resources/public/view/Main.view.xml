<sap.ui.core.mvc:View controllerName="view.Main"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:sap.ui.core.mvc="sap.ui.core.mvc">
    <Page title="example">
        <content>
            <t:Table id="table" rows="{/table}" selectionMode="None" showNoData="true" visibleRowCount="10" width="50%">
                <t:columns>
                    <t:Column>
                        <Label text="Seq"/>
                        <t:template>
                            <Text text="{row}"/>
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="SFC"/>
                        <t:template>
                            <Text text="{sfc}"/>
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <Label text="Item"/>
                        <t:template>
                            <Text text="{item}"/>
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
            <FlexBox id="box" justifyContent="End" width="50%">
            </FlexBox>
        </content>
    </Page>
</sap.ui.core.mvc:View>