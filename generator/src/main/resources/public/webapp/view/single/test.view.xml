<mvc:View
      controllerName="gen.view.single.test"
      xmlns="sap.m"
      xmlns:mvc="sap.ui.core.mvc"
      xmlns:core="sap.ui.core"
      xmlns:unified="sap.ui.unified"
      xmlns:html="http://www.w3.org/1999/xhtml"
      xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
      xmlns:t="sap.ui.table">
   <Page
         class="sapUiSizeCompact"
         title="T">
      <headerContent>
         <Button text="B" />
      </headerContent>
      <t:Table
            id="table"
            rows="{/table}"
            selectionMode="None"
            showNoData="true"
            visibleRowCount="2"
            width="10%"
            class="sapUiTinyMargin">
         <t:columns>
            <t:Column>
               <Label text="Seq" />
               <t:template>
                  <Text text="{seq}" />
               </t:template>
            </t:Column>
            <t:Column>
               <Label text="Button" />
               <t:template>
                  <Button
                        text="press"
                        press="pressTest($event, '1')">
                     <dependents>
                        <core:Fragment
                              fragmentName="gen.view.single.Dialog"
                              type="XML" />
                     </dependents>
                  </Button>
               </t:template>
            </t:Column>
         </t:columns>
      </t:Table>
   </Page>
</mvc:View>