<mvc:View controllerName="yo.view.calendar.calendar"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core"
   xmlns:unified="sap.ui.unified"
   xmlns:html="http://www.w3.org/1999/xhtml"
   xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
   xmlns:t="sap.ui.table">
   <Page>
      <VBox class="sapUiSmallMargin">
         <PlanningCalendar id="pc" startDate="{/startDate}" rows="{/scheduler}" appointmentsVisualization="Filled" showEmptyIntervalHeaders="false" stickyHeader="true" showWeekNumbers="true" viewKey="D" intervalSelect="handleAppointmentAddWithContext" appointmentSelect="handleAppointmentSelect">
            <views>
               <!-- intervalsL顯示天數 -->
               <PlanningCalendarView description="Day" intervalType="Day" key="D" intervalsL="30"></PlanningCalendarView>
            </views>
            <rows>
               <PlanningCalendarRow title="{name}" text="{team}" icon="{pic}" appointments="{path : 'appointments', templateShareable: true}" intervalHeaders="{path: 'headers', templateShareable: true}">
                  <appointments>
                     <unified:CalendarAppointment startDate="{start}" endDate="{end}" title="{title}" icon="{pic}" text="{info}" type="{type}" tentative="{tentative}">
                     </unified:CalendarAppointment>
                  </appointments>
                  <intervalHeaders>
                     <unified:CalendarAppointment startDate="{start}" endDate="{end}" icon="{pic}" title="{title}" type="{type}">
                     </unified:CalendarAppointment>
                  </intervalHeaders>
               </PlanningCalendarRow>
            </rows>
         </PlanningCalendar>
      </VBox>
   </Page>
</mvc:View>